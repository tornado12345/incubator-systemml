execSum = function(Matrix[Double] X) return (Double sx) 
{
   sx = sum(X);
}

V = read($1, rows=$2, cols=$3);

R = matrix(0, rows=$3,cols=1); 
dummy = matrix(1, rows=1, cols=1);

parfor( i in 1:$3, mode=REMOTE_SPARK, opt=NONE ) 
{
   X = V[,i];
   sumx = execSum(X);
   R[i,1] = dummy * sumx; 
}

write(R, $4);
